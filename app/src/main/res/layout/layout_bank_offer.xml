<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1px"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/dataCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/MyAppbarTheme"
        android:paddingBottom="@dimen/dimen_2dp"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/bankOfferName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABC Bank Pvt. Ltd."
            android:padding="@dimen/dimen_5dp"
            android:layout_toEndOf="@id/bankImage"
            style="@style/customTextViewStyle"
            android:textSize="@dimen/dimen_14sp"
            android:textStyle="bold"
            android:textColor="@color/background_color"/>

        <ImageView
            android:id="@+id/bankImage"
            android:layout_width="100dp"
            android:layout_height="@dimen/dimen_70dp"
            android:scaleType="fitXY"
            android:padding="1dp"
            android:layout_centerVertical="true"
            android:background="@drawable/border_background"
            android:layout_margin="@dimen/dimen_5dp"/>

        <TextView
            android:id="@+id/bankOfferDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_5dp"
            android:layout_toEndOf="@+id/bankImage"
            android:textSize="@dimen/dimen_12dp"
            android:layout_below="@+id/bankOfferName"
            android:textColor="@color/background_color"
/>
    </RelativeLayout>



   </android.support.v7.widget.CardView>