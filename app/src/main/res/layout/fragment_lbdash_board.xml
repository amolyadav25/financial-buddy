<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/snackBarView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.fragments.LoanBuddy.TakeLoan.LBDashBoardFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/mToolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@drawable/toolbar_background"
        app:navigationIcon="@drawable/ic_dehaze_white_24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            
            android:gravity="center_vertical"
            android:text="Dashboard"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:textColor="@android:color/white" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:attr/actionBarSize">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">





            <LinearLayout
                android:id="@+id/loan_dash_layout"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dimen_40sp"
                android:layout_marginStart="@dimen/dimen_40sp"
                android:layout_marginEnd="@dimen/dimen_40sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:weightSum="100"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:layout_marginEnd="@dimen/dimen_14sp"
                        app:cardCornerRadius="@dimen/dimen_10dp"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:id="@+id/lbProfileLayout"
                            android:layout_width="match_parent"
                            android:background="@drawable/profile_background"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/dimen_80dp"
                                    android:src="@drawable/user"
                                    android:tint="@android:color/white"
                                    android:layout_height="@dimen/dimen_80dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/dimen_14sp"
                                    android:textStyle="bold"

                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="@dimen/dimen_10dp"
                                    android:textColor="@android:color/white"
                                    android:text="Profile"/>
                            </LinearLayout>


                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:layout_marginStart="@dimen/dimen_14sp"
                        app:cardCornerRadius="@dimen/dimen_10dp"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:id="@+id/lendMoneyLayout"
                            android:layout_width="match_parent"
                            android:background="@drawable/lend_money_background"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/dimen_80dp"
                                    android:src="@drawable/lend_money"
                                    android:tint="@android:color/white"
                                    android:layout_height="@dimen/dimen_80dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/dimen_14sp"
                                    android:textStyle="bold"

                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="@dimen/dimen_10dp"
                                    android:textColor="@android:color/white"
                                    android:text="New Loan"/>
                            </LinearLayout>



                        </RelativeLayout>

                    </android.support.v7.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginTop="@dimen/dimen_30sp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:layout_marginEnd="@dimen/dimen_14sp"
                        app:cardCornerRadius="@dimen/dimen_10dp"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:id="@+id/myLoanSLayout"
                            android:layout_width="match_parent"
                            android:background="@drawable/my_loans_background"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/dimen_80dp"
                                    android:src="@drawable/my_loans"
                                    android:tint="@android:color/white"
                                    android:layout_height="@dimen/dimen_80dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/dimen_14sp"
                                    android:textStyle="bold"

                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="@dimen/dimen_10dp"
                                    android:textColor="@android:color/white"
                                    android:text="My Loans"/>
                            </LinearLayout>



                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:layout_marginStart="@dimen/dimen_14sp"
                        app:cardCornerRadius="@dimen/dimen_10dp"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:id="@+id/requestLayout"
                            android:layout_width="match_parent"
                            android:background="@drawable/request_background"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/dimen_80dp"
                                    android:src="@drawable/request"
                                    android:layout_gravity="center_horizontal"
                                    android:tint="@android:color/white"
                                    android:layout_height="@dimen/dimen_80dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/dimen_14sp"
                                    android:textStyle="bold"

                                    android:gravity="center_horizontal"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="@dimen/dimen_10dp"
                                    android:textColor="@android:color/white"
                                    android:text="Request"/>
                            </LinearLayout>



                        </RelativeLayout>

                    </android.support.v7.widget.CardView>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginTop="@dimen/dimen_30sp"
                    android:weightSum="100"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:layout_marginEnd="@dimen/dimen_14sp"
                        app:cardCornerRadius="@dimen/dimen_10dp"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:id="@+id/uploadDocument"
                            android:layout_width="match_parent"
                            android:background="@drawable/upload_document_background"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/dimen_80dp"
                                    android:src="@drawable/upload_document"
                                    android:tint="@android:color/white"
                                    android:layout_height="@dimen/dimen_80dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/dimen_14sp"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="@dimen/dimen_10dp"
                                    android:textColor="@android:color/white"
                                    android:text="Upload \nDocument"/>
                            </LinearLayout>



                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>





            </LinearLayout>


        </LinearLayout>



    </ScrollView>

    <RelativeLayout
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_marginTop="?android:attr/actionBarSize"
        android:background="@color/transparent_white">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>



</android.support.design.widget.CoordinatorLayout>