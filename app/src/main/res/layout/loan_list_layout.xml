<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_10dp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/dimen_5dp">

    <RelativeLayout
        android:id="@+id/dataCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:elevation="@dimen/dimen_2dp"
        android:padding="@dimen/dimen_5dp"
        android:theme="@style/MyAppbarTheme">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/servicePic"
                android:layout_width="@dimen/dimen_60sp"
                android:layout_height="@dimen/dimen_60sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/dimen_5dp"
                android:src="@drawable/loan" />


            <TextView
                android:id="@+id/userName"
                style="@style/customTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:paddingStart="@dimen/dimen_5dp"
                android:paddingEnd="@dimen/dimen_5dp"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:textColor="@color/image_gradient_color" />
        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>